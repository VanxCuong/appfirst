<% include top %>
    <div class="col-sm-9 col-xs-12 admin-info mt-3">
        <div class="row">
            <div class="jumbotron bg-white btn-block">
                <h1 class="display-3">Thêm Vai Trò Quản Trị Web</h1>
                <p class="lead"></p>
                <hr class="my-2">
                <form action="/admin/role" method="post">
                    <div class="form-group">
                      <label for="">Nhập tên</label>
                      <input type="text" name="role" class="form-control" placeholder="Tên danh mục" aria-describedby="helpId">
                    </div>
                    <div class="form-group">
                      <input type="submit" class="form-control btn btn-outline-danger"  value="Thêm" >
                    </div>
                </form>
                
            </div>
            <!-- jumbotron -->
            <div class="jumbotron bg-white btn-block mt-3">
                <h1 class="display-3">Quản lý Vai Trò Quản Trị Web</h1>
                <p class="lead"></p>
                <hr class="my-2">
                <ul class="list-group mt-3">
                    <% role.forEach(function(i){  %>
                    <li class="list-group-item d-flex justify-content-between align-items-center ">
                        <%= i.role%>
                        <span class="badge badge-secondary badge-pill" >
                            <a href="<%= i._id%>" class="remove-category">Xóa</a>
                        </span>
                    </li>
                    <%})%>
                </ul>
            </div>
            <!-- jumbotron -->
        </div>
    </div>
    <!-- managerinfo col:12 -->
<% include bottom %>