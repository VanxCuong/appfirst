<% include top %>
    <div class="col-sm-9 col-xs-12 admin-tollbar mt-3">
        <div class="row">
            <div class="jumbotron bg-white btn-block">
                <h1 class="display-3">Thêm Thanh Công Cụ User</h1>
                <p class="lead"></p>
                <hr class="my-2">
                <form action="/admin/usertollbar" method="post">
                    <div class="form-group rgt-info">
                    <label for="idNameTollBar">Tên Mục</label>
                      <input type="text" name="name" id="idNameTollBar" title="Tên Mục" class="form-control" required="" minlength="3"  placeholder="Ví dụ: Quản Lý Admin...">
                      <div>  <span class="require-form">*</span></div>
                    </div>
                    <div class="form-group rgt-info">
                      <label for="idLinkTollBar">Đường dẫn</label>
                      <input type="text" name="link" id="idLinkTollBar"  title="Đường dẫn cho thanh công cụ"  class="form-control" required  minlength="1"   pattern="[a-zA-Z0-9._%+-._%+//]+"  placeholder="Ví dụ: quan-ly-admin"  >
                      <div>  <span class="require-form">*</span></div>
                    </div>
                    <div class="form-group">
                      <input type="submit" class="form-control btn btn-outline-danger"  value="Thêm" >
                    </div>
                </form>
                
            </div>
            <!-- jumbotron -->
            <div class="jumbotron bg-white btn-block mt-3">
                <h1 class="display-3">Quản lý Thanh Công Cụ</h1>
                <p class="lead"></p>
                <hr class="my-2">
                <ul class="list-group mt-3">
                    <%tollbar.forEach(function(item){%> 
                    <li class="list-group-item d-flex justify-content-between align-items-center ">
                        Tên:<%= item.name%> - Link:<%= item.link%>
                        <span class="badge badge-secondary badge-pill" >
                            <a href="/admin/usertollbar/<%= item._id%>" onclick="if(!confirm('Bạn có muốn xóa:< <%= item.name%> >của User')){return false;}" class="remove-category">Xóa</a>
                        </span>
                    </li>
                    <%})%>
                </ul>
            </div>
            <!-- jumbotron -->
        </div>
    </div>
    <!-- managerinfo col:12 -->
<% include bottom %>                