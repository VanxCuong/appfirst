<% include top %>
    <div class="col-sm-9 col-xs-12 manager-comments mt-3">
        <div class="row">
            <div class="jumbotron bg-white btn-block">
                <h1 class="display-3">Duyệt Bình Luận</h1>
                
            </div>
            <% if(qttCmt>0){%>
                <% if(qttCmt>1){%>
                <div class="col-sm-12  mt-3">
                    <div class="float-right">
                        <span>Lựa Chọn </span>
                        <a href="" class="btn btn-warning" id="AcceptALL">Accept ALL (<%= qttStatus%>)</a>
                        <a href=""class="btn btn-primary" id="DeleteALL" >Delete ALL (<%= qttStatus%>)</a>
                    </div>
                </div>
                <%}%>
                <table class="table table-striped table-bordered table-responsive-sm mt-3">
                    <thead class="thead-light ">
                        <tr>
                            <th>Hình Ảnh</th>
                            <th>Khách hàng</th>
                            <th>Nội Dung</th>
                            <th>Hành vi</th>
                        </tr>
                    </thead>
                    <tbody id="reloads">
                    <% sl=0;%>
                        <% comments.forEach(function(item){%>
                        <%sl++%>
                        <tr>
                            <td><a href="/show/<%= item.product_id.link %>"><img src="/uploads/<%= item.product_id.image %>" width="50" alt=""></a></td>
                            <td idkh="<%= item.user_id._id%>"><a href=""><%= item.user_id.fullname%></a></td>
                            <td ><%= item.content%></td>
                            <td>
                                <a href="" class="float-left btn btn-outline-success" id="AcceptCmt" idu="<%= item._id%>" >Chấp nhận </a>
                                <a href=""class="float-right btn btn-outline-danger " id="deleteCmt" idu="<%= item._id%>" >Xóa</a>
                            </td>
                        </tr>
                        <%})%>
                    </tbody>
                </table>
                <div class="Hu-load text-center col-12" style="margin:auto;display:none;">
                    <img src="/images/o2mtzbxKtid.gif"  alt="">
                </div>
                <% if(qttCmt==1){ %>
                <div class="ShowComments" style="margin:auto">
                    <a href="" class="btn btn-danger" id="ShowComments" sl="<%= sl%>" >Xem Thêm</a>
                </div>
                <%}%>
            <%}else{%>
                <div class="col-12">
                    <p class="mt-3 text-center">Không có bình luận nào cần xét duyêt.</p>
                </div>
                
            <%}%>

        </div>
    </div>
    <!-- managerinfo col:12 -->

<% include bottom %>