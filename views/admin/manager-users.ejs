<% include top %>
    <div class="col-sm-9 col-xs-12 manager-order mt-3">
        <div class="row">
            <div class="jumbotron bg-white btn-block">
                <h1 class="display-3">Danh sách khách hàng</h1>
                <div class="manager-product-search">
                    <form action="" method="post">
                        <div class="form-group">
                                <input type="text" id="form-search" class="form-control" placeholder="Vd: TISSOT, LONGINES..." >
                                <input type="submit" id="formSearch"  class="btn btn-search">
                        </div>
                    </form>
                </div>
            </div>
            <div class="node-user mt-3">
                <p>Lưu Ý: Bạn Xóa User là bạn sẽ Xóa mọi dữ liệu liên quan đến thành viên này: order,comments,quản trị,...</p>
            </div>
            <table class="table table-striped table-bordered table-responsive-sm ">
                <thead class="thead-light ">
                    <tr>
                        <th>KH</th>
                        <th>Email</th>
                        <th>Mật khẩu</th>
                        <th>Cấp bậc</th>
                        <th>Trạng thái</th>
                        <th>Hành vi</th>
                    </tr>
                </thead>
                <tbody id="reloads">
                    <% user.forEach(function(i){  %>
                    <tr>
                        <td class="text-center"><a href=""><%= i.user_id.fullname %></a></td>
                        <td><%= i.user_id.email %></td>
                        <td>********</td>
                        <td>
                            <p id="roleUser"><%= i.role_id.role %></p>
                            <select class="form-control select-role" name="role"  style="display:none">
                                <option value=""><%= i.role_id.role %></option>
                                <% role.forEach(function(item){ %>
                                    <option value="<%= item._id%>"><%= item.role%></option>
                                <%});%>
                            </select>
                        </td>
                        <td>OFFLINE</td>
                        <td>
                            <div class="behavior">
                                <a href="" class="float-left btn btn-outline-success edit-user">Chỉnh sửa</a>
                                <a href="/admin/deleteUser/<%= i.user_id._id %>" onclick="if(!confirm('Bạn có muốn sẽ xóa tất cả thông tin liên quan đến:<%= i.user_id.email%> ?')){return false;}"  class="float-right btn btn-outline-danger del-user" >Xóa</a>
                            </div>
                            <div class="behavior-success" style="display:none">
                                <a href=""class="float-right btn btn-outline-success btn-block save-user"  idu="<%= i.user_id._id %>">Lưu</a>
                            </div>
                        </td>

                    </tr>
                    <%});%>
                </tbody>
            </table>
        </div>
    </div>
    <!-- managerinfo col:12 -->

<% include bottom %>