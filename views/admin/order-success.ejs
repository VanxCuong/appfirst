<% include top %>
<%  
    var getDateTime= function(date) {
        var hour = date.getHours();
        hour = (hour < 10 ? "0" : "") + hour;
        var min  = date.getMinutes();
        min = (min < 10 ? "0" : "") + min;
        var sec  = date.getSeconds();
        sec = (sec < 10 ? "0" : "") + sec;
    
        var year = date.getFullYear();
    
        var month = date.getMonth() + 1;
        month = (month < 10 ? "0" : "") + month;
    
        var day  = date.getDate();
        day = (day < 10 ? "0" : "") + day;
    
        return   hour + ":" + min +" - " + day + "/" + month+ "/" +year ;
    };
    %>
    <div class="col-sm-9 col-xs-12 manager-order manager-order-success mt-3">
        <div class="row">
            <div class="jumbotron bg-white btn-block">
                <h1 class="display-3">Tất cả đơn hàng đã giao</h1>
                <div class="manager-product-search">
                    <form action="" method="post">
                        <div class="form-group">
                            <input type="text" id="form-search" class="form-control" placeholder="Tìm kiếm tên sản phẩm..." >
                            <input type="submit" id="formSearch"  class="btn btn-search">
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-sm-12 show-value mt-3">
                <div class="float-right">
                    <span>Lựa Chọn </span>
                    <a href="" class="btn btn-primary">Mặc Định</a>
                    <a href="" class="btn btn-warning">7 ngày gần nhất</a>
                    <a href=""class="btn btn-primary" >Đơn trong tháng</a>
                    <a href=""class="btn btn-primary" >Đơn trong Tháng</a>
                </div>
            </div>
            <table class="table table-striped table-bordered table-responsive-sm mt-3">
                <thead class="thead-light ">
                    <tr class="text-center">
                        <th>khách hàng</th>
                        <th>Ngày đặt hàng</th>
                        <th>Hình ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Tổng cộng</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody id="reloads">
                    <% stt=0; %>
                    <% order.forEach(function(item){ %>
                    <tr>
                        <% ++stt;%>
                        <td><a href=""><%= item.user_id.fullname %></a></td>
                        <td><%= getDateTime(item.create_at); %></td>
                        <td><a href="/show/<%= item.product_id.link %>"><img src="/uploads/<%= item.product_id.image %>" width="50" alt=""></a></td>
                        <td><%= item.product_id.name%></td>
                        <td><%= item.quanlity%></td>
                        <td><%= format(item.quanlity*item.product_id.price_new); %> VNĐ</td>
                        <td>
                            <p>Hoàn tất</p>

                        </td>
                    </tr>
                    <%});%>
                </tbody>
            </table>
            <div class="Hu-load text-center col-12" style="margin:auto;display:none;">
                    <img src="/images/o2mtzbxKtid.gif"  alt="">
            </div>
            <div class="checksp text-center" style="margin:auto; width:100%"></div>
            <% if(order.length==20){ %>
            <div class="showOrderSucces" style="margin:auto;">
                <a href="#" class="btn btn-danger" id="showOrderSucces" sl="<%= stt; %>" </a>Xem Thêm</a>
            </div>
            <%}%>
        </div>
    </div>
