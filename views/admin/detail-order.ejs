<% include top %>
    <div class="col-sm-9 col-xs-12 admin-info mt-3">
        <div class="row">
        <div class="col-sm-12">
        <div class="card" style="background-color:white;width:100%;font-size:16px;">
            <div class="card-header text-center">Chi tiết đơn đặt hàng: <span style="color:#76c7c7;"><%= order.product_id.name %></span></div>
            <div class="card-body">
                <div class="st-order">
                    <h5>Vận chuyển</h5>
                    <% if(order.status=="1"){ %>
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-primary" role="progressbar"
                                style="width: 100%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">Hoàn tất</div>
                        </div>
                    <%}else{%>
                        <div class="progress">
                                <div class="progress-bar progress-bar-striped progress-bar-animated bg-primary" role="progressbar"
                                    style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">Đang chờ giao hàng</div>
                            </div>
                    <%}%>
                </div>
                <div class="if-order mt-3 ">
                    <h5>Thông tin đơn hàng</h5>
                    <div class="img-order" style="width:100%;text-align:center">
                        <img src="/uploads/<%= order.product_id.image%>"  width="200" alt="">
                    </div>
                    <div class="form-group row mt-5">
                      <label for="" class="col-6 text-right" >Người nhận hàng:</label>
                      <label for="" class="col-6 text-left" ><%= order.customer%></label>
                    </div>
                    <div class="form-group row mt-3">
                      <label for="" class="col-6 text-right" >Tỉnh/thành phố:</label>
                      <label for="" class="col-6 text-left" >
                            <% if(order.city=="1"){ %>
                                Hà Nội
                            <%}else{%>
                                Hồ Chí Minh
                            <%}%>
                      </label>
                    </div>
                    <div class="form-group row mt-3">
                      <label for="" class="col-6 text-right" >Địa chỉ nhận hàng:</label>
                      <label for="" class="col-6 text-left" ><%= order.addressorder%></label>
                    </div>
                    <div class="form-group row mt-3">
                      <label for="" class="col-6 text-right" >Số điện thoại:</label>
                      <label for="" class="col-6 text-left" ><%= order.phone%></label>
                    </div>
                    <div class="form-group row mt-3">
                      <label for="" class="col-6 text-right" >Hình thức thanh toán:</label>
                      <label for="" class="col-6 text-left" >
                            <% if(order.city=="1"){ %>
                                Chuyển khoản ngân hàng
                            <%}else{%>
                                Thanh toán khi nhận hàng
                            <%}%>
                      </label>
                    </div>
                    <div class="form-group row mt-3">
                            <label for="" class="col-6 text-right" >Số lượng:</label>
                            <label for="" class="col-6 text-left" ><%= order.quanlity%></label>
                        </div>
                    <div class="form-group row mt-3">
                        <label for="" class="col-6 text-right" >Thành tiền:</label>
                        <label for="" class="col-6 text-left" ><%= format(order.quanlity*order.product_id.price_new)%> VNĐ</label>
                    </div>
                </div>
                <!-- if-order -->
            </div>
            <!-- card-body -->
            <div class="card-footer text-center">Mọi thắc mắc liên hệ : 0971533898</div>
        </div>
    </div>
        </div>
    </div>
    <!-- managerinfo col:12 -->
<% include bottom %>                