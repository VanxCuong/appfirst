<% include header %>
 <div id="carouselId" class="carousel slide" data-ride="carousel">
     <ol class="carousel-indicators">
         <li data-target="#carouselId" data-slide-to="0" class="active"></li>
         <li data-target="#carouselId" data-slide-to="1"></li>
         <li data-target="#carouselId" data-slide-to="2"></li>
     </ol>
     <div class="carousel-inner" role="listbox">
         <div class="carousel-item active">
             <img class="carousel-img" src="/images/s1.jpg">
             <div class="carousel-caption d-none d-md-block">
                 <h3>Title</h3>
                 <p>Description</p>
             </div>
         </div>
         <div class="carousel-item">
                <img class="carousel-img" src="/images/s2.jpg">
             <div class="carousel-caption d-none d-md-block">
                 <h3>Title</h3>
                 <p>Description</p>
             </div>
         </div>
         <div class="carousel-item">
                <img class="carousel-img" src="/images/s3.jpg">
             <div class="carousel-caption d-none d-md-block">
                 <h3>Title</h3>
                 <p>Description</p>
             </div>
         </div>
     </div>
     <a class="carousel-control-prev" href="#carouselId" role="button" data-slide="prev">
         <span class="carousel-control-prev-icon" aria-hidden="true"></span>
         <span class="sr-only">Previous</span>
     </a>
     <a class="carousel-control-next" href="#carouselId" role="button" data-slide="next">
         <span class="carousel-control-next-icon" aria-hidden="true"></span>
         <span class="sr-only">Next</span>
     </a>
 </div>
 <!-- carousel -->
 <main class="main">
    <div id="mainBody" class="col-sm-12 danh-muc">
        <div class="row">
            <div id="category" class="col-sm-2">
                <div class="col-sm-12  mt-4">
                    <div class="search-product">
                        <form action="" method="post">
                            <input type="text" id="form-search" idctg="<%= ctgProduct._id %>" class="form-control" placeholder="Vd: TISSOT, LONGINES..." >
                            <input type="submit" id="formSearch"  class="btn btn-search">
                        </form>
                    </div>
                    <!-- search-product -->
                    <div class="show-category mt-3">
                        <div class="category-title text-center">
                            <h4>Danh Mục</h4>
                        </div>
                        <ul class="list-group list-ctg">
                        
                        </ul>
                    </div>
                    <!-- show-category -->
                </div>
                <!-- col:12 -->
            </div>
            <!-- category -->
            <div class="col-sm-10 mt-1" id="showProduct" >
                <% if(productCTG[0]){ %>
                <div class="frames-product">
                    <div class="col-sm-12 col-xs-12">
                        <div class="row home-showProduct">
                            <% productCTG.forEach(function(item){ %>
                                <div class="col-sm-3 mt-3 col-xs-12 ">
                                    <div class="card-product">
                                        <div class="card text-left|center|right">
                                            <div class="img-product">
                                                <a href="/show/<%= item.link%>"><img class="card-img-top" src="/uploads/<%= item.image %>" alt=""></a>
                                            </div>
                                            <div class="card-body">
                                        <% function processString(gt){
                                                var k=gt.slice(30);
                                                    if(k){
                                                        gt=gt.slice(0,30)+"...";
                                                    }else{
                                                        gt=gt.slice(0,30);
                                                    }
                                                return gt;
                                            } ;%>
                                                <a href="#"><h4 class="card-title"><%= processString(item.name) %></h4></a>
                                                <% var thanhtien= item.price_old-(item.price_old*item.price_sale/100) %>
                                                <p class="card-text price-new"><%= format(thanhtien) %> VNĐ</p>
                                                <p class="card-text "> 
                                                    <span class="price-old"><%= format(item.price_old) %> VNĐ</span> 
                                                    <!-- nếu giảm giá thì mới hiện -->
                                                    <% if(item.price_sale){ %>
                                                    <span class="price-sale"><%= item.price_sale%>%</span>
                                                    <%};%>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                    <!-- col-sm-3 -->
                                <%}); %>
                                
                        </div>
                        <!-- row -->
                    </div>
                        <!-- col:12 -->
                </div>
                <!-- frames-product -->
                    <div class="interfacechecksp text-center mt-5">
                    </div>
                    <div id="show-hu-load" style="display:none">
                        <img src="/images/o2mtzbxKtid.gif" style="position: relative;left: 50%;transform: translateX(-50%);margin-top: 30px;" alt="">
                    </div>
                    <% if(amountProductCTG>=12){ %>
                        <div class="icons-load text-center mt-5">
                            <div class="col-sm-12">
                                <a href="#" class="btn btn-outline-danger" idu="<%= amountProductCTG %>" idctg="<%= ctgProduct._id %>">Xem Thêm</a>
                            </div>
                        </div>
                    <%} %>
                <%}else{ %>
                    <h3 class=" text-center mt-5">Sản phẩm chưa được cập nhật</h3>
                <%};%>
            </div>
            <!-- showProduct -->
        </div>
        <!-- row -->
    </div>
    <!-- mainBody -->
 </main>

 <% include footer %>