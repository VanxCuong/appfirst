<% include header %>
    <div class="frames-main">
            <div class="frames-forget">
                <h3 class="title-forget text-center">Quên mật hhẩu</h3>
                <% if(!success){ %>
                <form action="/forget" method="post" class="mt-3">
                    <div class="form-group">
                        <label for=""></label>
                        <input type="email" name="email" required class="form-control" placeholder="Vui lòng nhập Email bạn đã đăng ký">
                        <p class="text-muted text-mess"><%= message%></p>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-outline-success btn-block">Gửi yêu cầu</button>
                    </div>
                </form>
                <% }else{%>
                    <div class="fb-success" style="width:80%;margin:auto">
                        <div class="alert alert-success" role="alert">
                            <%= success%>
                        </div>
                    </div>
                <%}%>
            </div>
        </div>
    </div>    
<% include footer %>